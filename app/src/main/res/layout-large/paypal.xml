<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/listview_border"
    android:orientation="vertical"
    android:padding="70dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/paypal_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paypal_message"
        android:textColor="@color/headers_color"
        android:textSize="@dimen/toast_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/paypal_fill_price"
            android:textColor="@color/blue_main_color"
            android:textSize="@dimen/toast_font_size"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/big_text_title"
            android:textStyle="bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/headers_color"
            android:background="@drawable/listview_border"
            android:id="@+id/price_input"/>

        <Button
            android:id="@+id/paynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/headers_color"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/states_buttons"
            android:text="@string/paypal_pay_btn" />

    </LinearLayout>


</LinearLayout>