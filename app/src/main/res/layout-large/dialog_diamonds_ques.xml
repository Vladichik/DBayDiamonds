<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_diamonds_style">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_main_color"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/toast_font_size"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="@string/diam_dialog_message"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/picked_diamonds" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_main_color"
            android:text="@string/choose_certificate"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/toast_font_size"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="7dp"
            android:background="@drawable/spinner_diamonds_style"
            android:id="@+id/certificate_picker" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:id="@+id/close_dialog"
            android:layout_height="wrap_content"
            android:text="@string/verification_dialog_cancel"
            android:layout_marginTop="15dp"
            android:textColor="@color/headers_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:background="@drawable/states_buttons" />


        <Button
            android:layout_width="100dp"
            android:id="@+id/send_mail"
            android:layout_height="wrap_content"
            android:text="@string/go_on_btn"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/headers_color"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/states_buttons" />
    </LinearLayout>

</LinearLayout>